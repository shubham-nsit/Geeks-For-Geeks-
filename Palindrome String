class Solution{
public:	
	
	
	int isPlaindrome(string S)
	{
	    // Your code goes here
	    int len=S.size();
	    int flag=0;
	    len--;
	    int i=0;
	    while(i<len)
	    {
	        if(S[i]!=S[len])
	        {
	            flag=1;
	            break;
	        }
	        i++;
	        len--;
	    }
	    if(flag==1)
	        return 0;
	    else
	        return 1;
	}

};
